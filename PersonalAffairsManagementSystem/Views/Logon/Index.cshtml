@{
    ViewData["Title"] = "登录";
}

<h2 style="text-align:center">个人信息管理系统</h2>
<hr />

<div>
    <form asp-controller="Logon" asp-action="Logon" method="post">
        <div>
            <label class="control-label">用户名</label>
            <input class="form-control" type="text" name="username" />
        </div>
        <div>
            <label class="control-label">密码</label>
            <input class="form-control" type="password" name="password" />
        </div>
        <div>
            <label class="control-label">验证码</label>
            <input class="form-control" type="text" name="checkcode" />
            <img id="nubImg" title="数字验证码" src="/CheckCode/NumberCheckCode?random=" alt="vcode" οnclick="refresh()" style="cursor:pointer;" />
        </div>
        <div class="form-group">
            <input type="submit" value="登录" class="btn btn-primary" />
        </div>
    </form>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script type="text/javascript">
    function refresh() {
            var id = document.getElementById("nubImg");
        var str = "/CheckCode/NumberCheckCode?random=" + Math.random();
            id.setAttribute("src", str);
    }
</script>